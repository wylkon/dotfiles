#!/usr/bin/env bash

npm_packages=(
	@babel/cli
	@babel/core
	@babel/node
	@babel/preset-env
	@babel/preset-react
	@babel/register
	@storybook/cli
	aws-sam-local
	babel-upgrade
	bundle-phobia-cli
	codesandbox
	create-react-app
	depcheck
	dotenv
	eslint
	expo-cli
	gatsby-cli
	gitbook-cli
	gulp
	iectrl
	jscodeshift
	nodemon
	npm-check-updates
	npm-consider
	ntl
	pm2
	prettier
	react
	react-dom
	react-native-cli
	release
	serve
	serverless
	source-map-explorer
	surge
	svgo
	tldr
	ts-node
	vercel
	webpack-bundle-analyzer
	yarn
)

# Install node packages
run_npm() {
  e_process "Getting installed packages"
  packages=$(npm -j -g --depth=0 ls 2>/dev/null)

  for i in "${npm_packages[@]}"; do
    version=$(echo "$packages" | jq -r '.dependencies."'"$i"'".version')
    peerMissing=$(echo "$packages" | jq -r '.dependencies."'"$i"'".peerMissing')

    if [[ "$version" == "null" ]] && [[ "$peerMissing" == "null" ]]; then
      e_process "Installing $i"
      npm install -g "$i"
    else
      e_warning "$i already installed"
    fi
  done
}
